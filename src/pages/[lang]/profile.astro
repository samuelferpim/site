---
import { type CollectionEntry, getEntry } from "astro:content";
import Markdown from "@components/misc/Markdown.astro";
import { getStaticAlternates } from "@utils/url-utils";
import { profileConfig } from "../../config";
import I18nKey from "../../i18n/i18nKey";
import {
	DEFAULT_LOCALE,
	i18n,
	SUPPORTED_LOCALES,
} from "../../i18n/translation";
import MainGridLayout from "../../layouts/MainGridLayout.astro";
import { getEntryLang } from "../../utils/content-utils";

export async function getStaticPaths() {
	return SUPPORTED_LOCALES.filter((lang) => lang !== DEFAULT_LOCALE).map(
		(lang) => ({
			params: { lang },
		}),
	);
}

const { lang } = Astro.params;

// Try to get localized profile page, fallback to default 'profile'
let profilePost = (await getEntry("spec", `${lang}/profile` as any)) as
	| CollectionEntry<"spec">
	| undefined;
if (!profilePost) {
	profilePost = (await getEntry("spec", "profile")) as
		| CollectionEntry<"spec">
		| undefined;
}

if (!profilePost) {
	return Astro.redirect("/404");
}

const { Content } = await profilePost.render();
const profileLang = getEntryLang(profilePost);

const toPlainText = (value: string) =>
	value
		.replace(/!\[[^\]]*]\([^)]+\)/g, "")
		.replace(/\[[^\]]*]\([^)]+\)/g, "")
		.replace(/[`*_>#-]/g, "")
		.replace(/\s+/g, " ")
		.trim();

const jsonLd = {
	"@context": "https://schema.org",
	"@type": "ProfilePage",
	name: i18n(I18nKey.profile, lang),
	description: toPlainText(profilePost.body || ""),
	mainEntity: {
		"@type": "Person",
		name: profileConfig.name,
		description: profileConfig.bio || "",
		sameAs: profileConfig.links.map((link) => link.url),
	},
	inLanguage: profileLang,
};
---

<MainGridLayout title={i18n(I18nKey.profile, lang)} lang={lang} alternateLinks={getStaticAlternates("/profile/")}>
    <script is:inline slot="head" type="application/ld+json" set:html={JSON.stringify(jsonLd)}></script>
    <div class="flex w-full rounded-[var(--radius-large)] overflow-hidden relative min-h-32">
        <div class="card-base z-10 px-9 py-6 relative w-full" lang={profileLang}>
            <Markdown class="mt-2">
                <Content />
            </Markdown>
        </div>
    </div>
</MainGridLayout>
